<!DOCTYPE html>
<html>
  <head>
    <title>Fakebook</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/793d8924a3.js" crossorigin="anonymous"></script>

  </head>

  <body>
  <div class="navbar-fixed-top">
      <nav class="navbar navbar-expand-sm navbar-inverse no-margin">
        <% if user_signed_in? %>
        <div class="container-fluid">
        <div class="navbar-header">
        <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Fakebook", posts_path, class:"navbar-brand" %>
        </div>
        <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="nav navbar-nav navbar-right mr-auto">
          <li class="nav-item">
            <%= link_to "Find Friends", users_path, class:"nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Timeline", posts_path, class:"nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "New Post", new_post_path, class:"nav-link" %>
          </li>
          <li class="nav-item">
              <%= link_to "Profile", user_path(current_user), class:"nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class:"nav-link" %>
          </li>
        </ul>
        </div>
        </div>
        <% else %>
        <div class="container-fluid">
        <div class="navbar-header">
        <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#navbarNav2" aria-controls="navbarNav2" aria-expanded="false" aria-label="Toggle navigation">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Fakebook", posts_path, class:"navbar-brand" %>
        </div>
        <div class="collapse navbar-collapse" id="navbarNav2">
        <ul class="nav navbar-nav mr-auto navbar-right">
        <li class="nav-item">
            <%= link_to "Sign In", new_user_session_path, class:"nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign Up", new_user_registration_path, class:"nav-link" %>
          </li>
          </ul>
          </div>
          </div>
        <% end %>
      </nav>
      <% if flash[:notice] %>
          <p class="alert alert-info"><%= notice %></p>
        <% end %>
        <% if flash[:alert] %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
        </div>
    <%= yield %>
  </body>
</html>
