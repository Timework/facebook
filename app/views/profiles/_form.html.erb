<%= form_with(model: @profile, url: user_profiles_path(current_user) ) do |f| %>

<div>
  <% @profile.errors.full_messages.each do |error| %>
    <div class="alert alert-danger"><%= error %></div>
  <% end %>
</div>

<div class="form-group">
    <%= f.label :image %><br />
    <%= f.file_field :image  %>
</div>

<div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, class:"form-control"  %>
  </div>

<div class="form-group">
    <%= f.label :about %><br />
    <%= f.text_area :about, rows:"10", class:"form-control"  %>
  </div>

  <div>
    <%= f.submit class:"btn btn-primary" %>
  </div>

<% end %>